<%= @rack_env %>:
  adapter: <%= @adapter %>
  database: <%= @database %>
<% if @host %>
  host: <%= @host %>
<% end %>
<% if @port %>
  port: <%= @port %>
<% end %>
<% if @pool %>
  pool: <%= @pool %>
<% end %>
<% if @timeout %>
  timeout: <%= @timeout %>
<% end %>
<% if @username %>
  username: <%= @username %>
<% end %>
<% if @password %>
  password: <%= @password %>
<% end %>